{
  "manifest_version": 3,
  "name": "BearBit Helper",
  "description": "Extension for 'bearbit.co' - Auto Thank, Screenshot Preview, Download+ Button (กดขอบคุณอัตโนมัติ, แสดงภาพตัวอย่าง, ปุ่มดาวน์โหลด+)",
  "version": "1.3.0",
  "author": "CHNWT",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/bearbit_helper_icon16.png",
    "48": "icons/bearbit_helper_icon48.png",
    "128": "icons/bearbit_helper_icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bearbit.co/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/bearbit_helper_icon16.png",
      "48": "icons/bearbit_helper_icon48.png",
      "128": "icons/bearbit_helper_icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "BearBit Helper"
  }
}
